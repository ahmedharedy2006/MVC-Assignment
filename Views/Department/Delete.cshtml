@model MVC_Assignment.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}
<h2>Delete Department</h2>
<div class="alert alert-danger">
    <strong>Are you sure you want to delete this department?</strong>
</div>
<div class="card mb-2">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Students:</strong></p>
        <ul>
            @if (Model.Students != null && Model.Students.Count > 0)
            {
                foreach (var student in Model.Students)
                {
                    <li>@student.Name</li>
                }
            }
            else
            {
                <li>No students in this department.</li>
            }
        </ul>
    </div>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="/Department">Cancel</a>
</form>
<a href="/Student">View Students</a>
