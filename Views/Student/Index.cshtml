@model IEnumerable<MVC_Assignment.Models.Student>
@{
    ViewData["Title"] = "Students";
}
<h2>Students</h2>
<a class="btn btn-primary mb-2" href="/Student/Create">Add New Student</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Age</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Address</td>
                <td>@student.Age</td>
                <td>@student.Department?.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Student/Details/@student.Id">Details</a>
                    <a class="btn btn-warning btn-sm" href="/Student/Edit/@student.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Student/Delete/@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Department">View Departments</a>
