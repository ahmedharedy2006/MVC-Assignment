@model IEnumerable<MVC_Assignment.Models.Department>
@{
    ViewData["Title"] = "Departments";
}
<h2>Departments</h2>
<a class="btn btn-primary mb-2" href="/Department/Create">Add New Department</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Students Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.Name</td>
                <td>@(dept.Students != null ? dept.Students.Count : 0)</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Department/Details/@dept.Id">Details</a>
                    <a class="btn btn-warning btn-sm" href="/Department/Edit/@dept.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Department/Delete/@dept.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Student">View Students</a>
