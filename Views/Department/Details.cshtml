@model MVC_Assignment.Models.Department
@{
    ViewData["Title"] = "Department Details";
}
<h2>Department Details</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Students:</strong></p>
        <ul>
            @if (Model.Students != null && Model.Students.Count > 0)
            {
                foreach (var student in Model.Students)
                {
                    <li>@student.Name</li>
                }
            }
            else
            {
                <li>No students in this department.</li>
            }
        </ul>
        <a class="btn btn-secondary" href="/Department">Back to List</a>
        <a class="btn btn-warning" href="/Department/Edit/@Model.Id">Edit</a>
        <a class="btn btn-danger" href="/Department/Delete/@Model.Id">Delete</a>
    </div>
</div>
<a href="/Student">View Students</a>
