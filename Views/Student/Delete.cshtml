@model MVC_Assignment.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}
<h2>Delete Student</h2>
<div class="alert alert-danger">
    <strong>Are you sure you want to delete this student?</strong>
</div>
<div class="card mb-2">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Address:</strong> @Model.Address</p>
        <p class="card-text"><strong>Age:</strong> @Model.Age</p>
        <p class="card-text"><strong>Department:</strong> @Model.Department?.Name</p>
    </div>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="/Student">Cancel</a>
</form>
<a href="/Department">View Departments</a>
