@model MVC_Assignment.Models.Student
@{
    ViewData["Title"] = "Student Details";
}
<h2>Student Details</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Address:</strong> @Model.Address</p>
        <p class="card-text"><strong>Age:</strong> @Model.Age</p>
        <p class="card-text"><strong>Department:</strong> @Model.Department?.Name</p>
        <a class="btn btn-secondary" href="/Student">Back to List</a>
        <a class="btn btn-warning" href="/Student/Edit/@Model.Id">Edit</a>
        <a class="btn btn-danger" href="/Student/Delete/@Model.Id">Delete</a>
    </div>
</div>
<a href="/Department">View Departments</a>
